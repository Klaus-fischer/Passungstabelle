<UserControl x:Class="Passungstabelle.Settings.FormatControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Passungstabelle.Settings"
             xmlns:sys="clr-namespace:System;assembly=mscorlib" 
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type={x:Type local:FormatViewModel}, IsDesignTimeCreatable=True}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:BoolToEnumConverter x:Key="EnumConverter"/>
        <ObjectDataProvider x:Key="BlattFormatItemsSource"
                            ObjectType="{x:Type sys:Enum}"
                            MethodName="GetValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type Type="{x:Type local:SheetFormat }" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="Formateinstellungen" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <GroupBox Header="Name" Grid.Column="0">
                    <TextBox Text="{Binding Name}" Margin="25,2,5,2"/>
                </GroupBox>

                <GroupBox Header="Blattformat" Grid.Column="1">
                    <ComboBox Margin="25,2,5,2" 
                              SelectedItem="{Binding SheetFormat}"
                              ItemsSource="{Binding Source={StaticResource BlattFormatItemsSource}}"/>
                </GroupBox>

                <GroupBox Header="Einfügeposition" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                    <UniformGrid Columns="2" >
                        <RadioButton Content="oben links"
                                     IsChecked="{Binding InsertPoint, Converter={StaticResource EnumConverter}, ConverterParameter={x:Static local:TableInsertPoint.TopLeft}}"
                                     Margin="5,4"
                                     />
                        <RadioButton Content="oben rechts"  
                                     IsChecked="{Binding InsertPoint, Converter={StaticResource EnumConverter}, ConverterParameter={x:Static local:TableInsertPoint.TopRight}}"
                                     Margin="5,4"
                                     FlowDirection="RightToLeft"
                                     />
                        <RadioButton Content="unten links"
                                     IsChecked="{Binding InsertPoint, Converter={StaticResource EnumConverter}, ConverterParameter={x:Static local:TableInsertPoint.BottomLeft}}"
                                     Margin="5,3"
                                     />
                        <RadioButton Content="unten rechts" 
                                     IsChecked="{Binding InsertPoint, Converter={StaticResource EnumConverter}, ConverterParameter={x:Static local:TableInsertPoint.BottomRight}}"
                                     Margin="5,3"  
                                     FlowDirection="RightToLeft"
                                     />
                    </UniformGrid>
                </GroupBox>

                <GroupBox Header="Offset" Grid.Row="2"  Grid.Column="0" Grid.ColumnSpan="2">
                    <UniformGrid Columns="2" Grid.IsSharedSizeScope="True">
                        <HeaderedContentControl Header="X: " 
                                                Template="{StaticResource HorizontalHeader}" 
                                                Margin="5"
                                                Padding="8,0,0,0">
                            <TextBox Text="{Binding OffsetX}" 
                                     VerticalContentAlignment="Center"/>
                        </HeaderedContentControl>
                        <HeaderedContentControl Header="Y: "
                                                Template="{StaticResource HorizontalHeader}"
                                                Margin="5"
                                                Padding="8,0,0,0"
                                                >
                            <TextBox Text="{Binding OffsetY}" 
                                     VerticalContentAlignment="Center"/>
                        </HeaderedContentControl>
                    </UniformGrid>
                </GroupBox>

                <GroupBox  Grid.Row="3" Grid.ColumnSpan="2" MinHeight="200">
                    <GroupBox.Header>
                        <TextBlock>
                      <Run Text="Seitenränder" Background="LemonChiffon"/>
                      <Run Text="/"/>
                      <Run Text="Zonen" Background="#FFC6FDC6"/>
                        </TextBlock>
                    </GroupBox.Header>
                    <Grid>
                        <Rectangle Margin="47,25"  Stroke="DimGray" StrokeThickness="1" 
                                   HorizontalAlignment="Left" VerticalAlignment="Top"
                                   Fill="LightGray" Width="30" Height="20" 
                                   DataContext="{Binding InsertPoint, Mode=OneWay}"
                                   DataContextChanged="OnPreviewDataContextChanged" Grid.Column="1"
                                   />
                        <Rectangle Margin="2,2,2,2"      Stroke="Gray"  StrokeThickness="1" Grid.ColumnSpan="2"/>
                        <Rectangle Margin="47,25,47,25"  Stroke="Black" StrokeThickness="1" Grid.ColumnSpan="2"/>
                        <TextBox Width="40" Margin="5" Text="A1" VerticalAlignment="Top"    HorizontalAlignment="Left"   HorizontalContentAlignment="Center" Background="#FFC6FDC6"  Foreground="Gray"   IsReadOnly="True" />
                        <TextBox Width="40" Margin="5" Text="10" VerticalAlignment="Top"    HorizontalAlignment="Center" HorizontalContentAlignment="Center" Background="LemonChiffon" />
                        <TextBox Width="40" Margin="5" Text="{Binding TopRightZone, Mode=OneWay}" VerticalAlignment="Top"    HorizontalAlignment="Right"  HorizontalContentAlignment="Center" Background="#FFC6FDC6" Foreground="Gray"   IsReadOnly="True" />
                        <TextBox Width="40" Margin="5" Text="20" VerticalAlignment="Center" HorizontalAlignment="Left"   HorizontalContentAlignment="Center" Background="LemonChiffon"/>
                        <TextBox Width="40" Margin="5" Text="10" VerticalAlignment="Center" HorizontalAlignment="Right"  HorizontalContentAlignment="Center" Background="LemonChiffon" />
                        <TextBox Width="40" Margin="5" Text="{Binding BottomLeftZone, Mode=OneWay}" VerticalAlignment="Bottom" HorizontalAlignment="Left"   HorizontalContentAlignment="Center" Background="#FFC6FDC6" Foreground="Gray"   IsReadOnly="True"/>
                        <TextBox Width="40" Margin="5" Text="10" VerticalAlignment="Bottom" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Background="LemonChiffon" />
                        <TextBox Width="40" Margin="5" Text="{Binding MaxZone}" VerticalAlignment="Bottom" HorizontalAlignment="Right"  HorizontalContentAlignment="Center" Background="#FFC6FDC6"/>
                    </Grid>
                </GroupBox>

                <DockPanel Grid.Row="5" Grid.ColumnSpan="2" LastChildFill="False">
                    <Button Content="Entfernen" 
                            Command="{Binding DeleteCommand}"
                            Margin="5" MinWidth="100"
                            Foreground="Crimson" 
                            />
                    <Button Content="Hinzufügen"
                            Command="{Binding AddCommand}"   
                            Margin="5" MinWidth="100" 
                            Foreground="Teal" 
                            DockPanel.Dock="Right"
                            />
                    <Button Content="Übernehmen" 
                            Command="{Binding UpdateCommand}" 
                            Margin="5" MinWidth="100"
                            DockPanel.Dock="Right"
                            />
                </DockPanel>
            </Grid>
        </GroupBox>
        <GroupBox Header="Gespeicherte Formate" Grid.Column="1">
            <ListBox SelectedItem="{Binding SelectedFormat}"
                     ItemsSource="{Binding FormatCollection}"
                     SelectionMode="Single">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="local:FormatSettings">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="100"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding Name}" FontSize="12" Margin="10,5" />
                            <TextBlock Grid.Column="1" Text="{Binding SheetFormat}"        Margin="10,5"/>
                            <TextBlock Grid.Column="2" Text="{Binding InsertPoint}"        Margin="10,5"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>
    </Grid>
</UserControl>
