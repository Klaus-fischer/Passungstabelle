<UserControl x:Class="Passungstabelle.Settings.GeneralControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Passungstabelle.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=local:GeneralViewModel, IsDesignTimeCreatable=True}"
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Passungstabelle.Settings;component/Visual/CustomStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <GroupBox Header="{local:UiText SpracheHeader}">
            <ComboBox HorizontalAlignment="Left"
                      SelectedValue="{Binding Language}"
                      ItemsSource="{Binding AvailableLanguages}"
                      MinWidth="100" Margin="20,0"
                      />
        </GroupBox>
        <GroupBox Header="{local:UiText GroupGeneralHeader}">
            <StackPanel>
                <CheckBox Content="{local:UiText OptionUseCentralLocation}"
                          IsChecked="{Binding UseCentralLocation}"/>
                <HeaderedContentControl Header="{local:UiText GroupCentralLocationHeader}"
                                        IsEnabled="{Binding UseCentralLocation}"
                                        Margin="25,2,5,2">
                    <DockPanel>
                        <Button Content="&#x1F50D;" DockPanel.Dock="Right" Click="SearchCommonLocation"/>
                        <TextBox Text="{Binding CentralLocation}" Margin="20,0,0,0"/>
                    </DockPanel>
                </HeaderedContentControl>
                <CheckBox Content="{local:UiText OptionUsePlusSign}" 
                          IsChecked="{Binding UsePlusSign}"
                          />
                <CheckBox Content="{local:UiText OptionOnlyOnFirstSheet}"
                          IsChecked="{Binding OnlyAtFirstSheet}"
                          />
                <CheckBox Content="{local:UiText OptionRemoveAtAllPages}"
                          IsChecked="{Binding RemoveAtAllPages}"
                          />
            </StackPanel>
        </GroupBox>
        <GroupBox Header="{local:UiText GroupUsersettingsHeader}">
            <StackPanel>
                <CheckBox Content="{local:UiText OptionCreateLogFile}"
                          IsChecked="{Binding CreateLogFile}"/>
                <HeaderedContentControl Header="{local:UiText GroupLogLocationHeader}"
                                        IsEnabled="{Binding CreateLogFile}"
                                        Margin="25,2,5,2">
                    <DockPanel>
                        <Button Content="&#x1F50D;" DockPanel.Dock="Right" Click="SearchLogFilePath"/>
                        <TextBox Text="{Binding LogFilePath}" Margin="20,0,0,0"/>
                    </DockPanel>
                </HeaderedContentControl>
                <CheckBox Content="{local:UiText OptionUseEvents}"
                          IsChecked="{Binding UseEvents}"
                          />
                <RadioButton Content="{local:UiText OptionAfterRebuild}" 
                             IsChecked="{Binding RecalculateAfterRebuild}"
                             IsEnabled="{Binding UseEvents}"
                             Margin="25,2"
                             />
                <RadioButton Content="{local:UiText OptionBeforeSave}" 
                             IsChecked="{Binding RecalculateBeforeSave}"
                             IsEnabled="{Binding UseEvents}"
                             Margin="25,2"
                             />
                <CheckBox Content="{local:UiText OptionSuppressMessages}"
                          IsChecked="{Binding SuppressMessages}"
                          />
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl>
