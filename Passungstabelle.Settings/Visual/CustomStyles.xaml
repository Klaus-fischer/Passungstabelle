<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="HorizontalHeader" TargetType="HeaderedContentControl">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" SharedSizeGroup="Header"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ContentPresenter ContentSource="Header"
                           VerticalAlignment="Center" 
                           Margin="3,0,0,0"/>
            <ContentPresenter ContentSource="Content" Margin="{TemplateBinding Padding}" Grid.Column="1"/>
        </Grid>
    </ControlTemplate>

    <Style TargetType="HeaderedContentControl" BasedOn="{StaticResource {x:Type HeaderedContentControl}}" >
        <Setter Property="Template" Value="{StaticResource HorizontalHeader}"/>
        <Setter Property="Focusable" Value="False" />
    </Style>
    
    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}" >
        <Setter Property="Margin" Value="5,2"/>
        <Setter Property="MinHeight" Value="21" />
        <Setter Property="Padding" Value="7,0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <Style TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}" >
        <Setter Property="Margin" Value="4,3,5,2"/>
        <Setter Property="MinHeight" Value="21" />
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}" >
        <Setter Property="Margin" Value="5,2"/>
        <Setter Property="Padding" Value="10,0"/>
        <Setter Property="MinHeight" Value="21" />
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>